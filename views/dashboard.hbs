<h6>DASHBOARD</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your Stories</p>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{ formatDate createdAt "MMMM Do YYYY, h:mm:s a"}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/stories/edit/{{_id}}" class="btn btn-float"> <i class="fa fa-edit"></i> </a>
                <a href="/stories/delete/{{_id}}" class="btn btn-float btn red"> <i class="fas fa-trash "></i> </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}